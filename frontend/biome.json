{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": [
      "static/**",
      "node_modules/**",
      "**/extension_output",
      ".nx/**/*",
      "**/dist",
      "**/dist/**/*",
      "test-data/**",
      "**/inject-tp.js",
      "dist",
      "dist-inspect",
      "__ai_responses__",
      "ai-data/**",
      "**/doc_build",
      "*-dump.json",
      "test-results/**",
      "iife-script/**",
      "script_get_all_texts.tmp.js",
      "**/playwright-report/**",
      "**/todo-report.spec.ts-snapshots/**",
      "**/visualizer/scripts/fixture/*",
      "**/unpacked-extension/*",
      "**/page-data/**",
      "**/dump.json",
      "**/dump-with-invisible.json",
      "**/dump-for-utils-test.json",
      "**/.rslib",
      "**/api-generate/**/*",
      "packages/api-client/src/models/**/*",
      "packages/api-client/src/services/**/*",
      "packages/api-client/src/core/**/*",
      "**/doc/**/*",
      "coverage/**/*",
      "output/**/*",
      ".output/**/*",
      "lib/**/*",
      "compiled/**/*"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useKeyWithClickEvents": "off",
        "useValidAnchor": "off",
        "noSvgWithoutTitle": "off",
        "useAltText": "off",
        "useHtmlLang": "off",
        "noBlankTarget": "off",
        "useButtonType": "off",
        "useIframeTitle": "off"
      },
      "style": {
        "noParameterAssign": "off",
        "noNonNullAssertion": "off",
        "noUselessElse": "off",
        "useNodejsImportProtocol": "off",
        "noUnusedTemplateLiteral": "off",
        "useNumberNamespace": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noUnnecessaryContinue": "off",
        "noUnreachable": "off",
        "noInvalidUseBeforeDeclaration": "off",
        "noUnknownProperty": "off"
      },
      "complexity": {
        "noForEach": "off",
        "noBannedTypes": "off",
        "useArrowFunction": "off",
        "useFlatMap": "off",
        "noStaticOnlyClass": "off",
        "noExcessiveCognitiveComplexity": {
          "level": "warn",
          "options": {
            "maxAllowedComplexity": 50
          }
        }
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off",
        "noImplicitAnyLet": "off",
        "noConfusingVoidType": "off",
        "noAssignInExpressions": "off",
        "noPrototypeBuiltins": "off",
        "noRedeclare": "off",
        "noDuplicateFontNames": "off",
        "noShorthandPropertyOverrides": "off",
        "noDuplicateAtImportRules": "off"
      },
      "performance": {
        "noDelete": "off",
        "noAccumulatingSpread": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      }
    }
  },
  "overrides": [
    {
      "include": ["*.ts", "*.d.ts", "*.tsx"],
      "ignore": [".nx"],
      "linter": {
        "rules": {}
      }
    }
  ],
  "vcs": {
    "defaultBranch": "main"
  },
  "formatter": {
    "lineWidth": 80,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf"
  }
}
